import sys
import GTG.gtg

from optparse import OptionParser

try:
    parser = OptionParser()
    parser.add_option("-d", "--debug",
                  action="store_true", dest="debug", help="enable debug output")
    (options, args) = parser.parse_args()
    sys.exit(GTG.gtg.main(options, args))
except KeyboardInterrupt:
    sys.exit(1)
